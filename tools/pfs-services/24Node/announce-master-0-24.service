[Unit]
Description = pfs announce: master
PartOf = master-0-24.service
BindsTo = master-0-24.service

[Service]
ExecStart = /bin/sh -c "while true; do etcdctl set /pfs/master/0-24 '%H:61229' --ttl 60;sleep 45;done"
ExecStop = /usr/bin/etcdctl rm /pfs/master/0-24

[X-Fleet]
MachineOf = master-0-24.service
